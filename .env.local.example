# Copy this file to .env.local and fill in your values

# Required: MongoDB connection string
MONGODB_URI=

# Required: NextAuth secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=

# Required for email authentication
RESEND_API_KEY=

# Optional: Google Auth (if using Google sign-in)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Optional: Stripe (if using payments)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Analytics Feature Flag
# Set to 'true' to enable AI detection analytics
# This collects anonymous data to improve detection accuracy
# Note: Only admin users can view analytics dashboard
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# After setting up analytics, promote a user to admin with:
# npm run make-admin your-email@domain.com

# Other optional settings
NEXTAUTH_URL=http://localhost:3000